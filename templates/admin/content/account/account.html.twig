{% extends 'admin/admin.html.twig' %}

{% block page_title %}Mon compte{% endblock %}
{% block page_subtitle %}Vous pouvez modifier ou suprrimer votre compte{% endblock %}

{% block page_content %}
    {% import "@AdminLTE/Macros/default.html.twig" as macro %}

<section class="container d-flex justify-content-center pt-3">
    <div class="pt-2">

    </div>
    <div class="pt-2 w-100">
        <section class="account bg-white rounded p-4 mx-auto">
        <div class="w-50 mx-auto ">
        <h1 class="text-center" style="margin-bottom: 20px;">Mon Compte</h1>
            <div class="text-center pt-3">
                <a href="{{ path('delete_account_controller') }}" class="btn btn-danger delete" style="margin-bottom: 30px;" onclick="return confirm('Voulez-vous vraiment supprimer votre compte ?')">Supprimer le compte</a>
            </div>
            {% for level, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ level }} mt-4">
                    {{ message|raw }}
                </div>
            {% endfor %}
            {% endfor %}
            <form method="post" enctype="multipart/form-data" class="my-5">
                <h3 class="text-center">Modifier mon email</h3>
                <div class="mb-3 pt-2">
                    <label for="exampleInputEmail1" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Votre email" value="{{ login.email }}" style="margin-bottom: 30px;">
                </div>
                <h3 class="pt-3 text-center">Modifier mon mot de passe</h3>
                <div class="mb-3 pt-2">
                    <div class="align-items-center">

                        <div>
                            <label class="form-label">Nouveau mot de passe</label>
                        </div>
                        <div class="col-auto">
                            <span id="passwordHelpInline" class="form-text" style="font-style:italic; color: #6c757d;">Doit contenir entre 8-20 caract√®res.</span>
                        </div>
                    </div>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Votre mot de passe" style="margin-bottom: 10px;">
                </div>
                <div class="mb-3 ">
                    <label for="password" class="col-form-label">Confirmez le mot de passe</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Votre mot de passe" style="margin-bottom: 30px;">
                </div>
                <div class="text-center pt-3">
                    <button class="btn btn-warning" style="color: black;">Confirmer les changements</button>
                </div>
            </form>
        </div>
        </section>
    </div>
</section>


{% endblock %}