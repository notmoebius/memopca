{% extends 'admin/admin.html.twig' %}

{% block page_title %}Ajoutez les salles de crises{% endblock %}
{% block page_subtitle %}Vous pouvez ajouter vos salles de crises{% endblock %}

{% block page_content %}
    {% import "@AdminLTE/Macros/default.html.twig" as macro %}

    <h1 class="text-center" style="color:#25a9d9;">Modification de la salle de crise:</h1>

<div class="row form-group" style="display:flex; justify-content:center;">
    <img src="\asset\images\logo\crise.png" class="img-circle col-xs-12 col-md-6" alt="" style="max-width: 200px;">
</div>


<div style="display: flex; justify-content:center;">
<form method="post" enctype="multipart/form-data" class="col-md-6">

    <div class="col-6 form-group">
        <label for="reference" class="text-uppercase">Référence de la salle de crise: </label>
        <input type="text" name="reference" id="reference" class="form-control mb-3" placeholder="Référence de la salle de crise"  value="{{ crisis.reference }}" required>
    </div>

    <div class="form-group row">
        <label class="col-sm-12 text-center text-uppercase" for="typecrisis">Type de la salle : </label>
    

        <div class="text-center ">
            <div class="form-check form-check-inline col-sm-6">
                <input class="form-check-input" type="radio" name="typecrisis" id="typecrisis1" value="1" {% if crisis.typecrisisroom.id == 1 %} checked {% endif %}>
                <p class="form-check-label" for="internal">Interne</p>
            </div>

            <div class="form-check col-sm-6">
                <input class="form-check-input" type="radio" name="typecrisis" id="typecrisis2" value="2" {% if crisis.typecrisisroom.id == 2 %} checked {% endif %}>
                <p class="form-check-label " for="external">Externe</p>
            </div>
        </div>

    </div>

    <div class="form-group row">
        <div class="col-sm-6">
            <label for="phonenumber" class="text-uppercase">Numéro de téléphone: <span style="font-style: italic;">(Optionnel)</span></label>
            <input type="text" name="phonenumber" id="phonenumber" class="form-control mb-3 col-sm-6" placeholder="Numéro de téléphone" value="{{ crisis.phonenumber }}">
        </div>
        <div class="col-sm-6">
            <label for="faxnumber" class="text-uppercase">Numéro de fax: <span style="font-style: italic;">(Optionnel)</span></label>
            <input type="text" name="faxnumber" id="faxnumber" class="form-control mb-3" placeholder="Numéro de Fax" value="{{ crisis.faxnumber }}">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-4">
            <label for="address1" class="text-uppercase">Adresse: </label>
            <input type="text" name="address1" id="address1" class="form-control mb-3 col-sm-6" placeholder="Adresse" value="{{ crisis.address1 }}" required>
        </div>

        <div class="col-sm-4">
            <label for="address2" class="text-uppercase">Code Postal et ville: </label>
            <input type="text" name="address2" id="address2" class="form-control mb-3" placeholder="Code Postal et ville" value="{{ crisis.address2 }}" required>
        </div>

        <div class="col-sm-4">
            <label for="address3" class="text-uppercase">Complément: <span style="font-style: italic;">(Optionnel)</span></label>
            <input type="text" name="address3" id="address3" class="form-control mb-3" placeholder="Complément d'adresse" value="{{ crisis.address3 }}">
        </div>
    
    </div>
<div style="display:flex; margin-bottom:20px; align-items: center;">
    <div>
        <img src="{{ crisis.plan }}" alt="le plan du site {{ crisis.reference }}" style="margin-right:20px; min-width: 230px; max-width:230px;">
    </div>
    <div class="col-6 form-group">
        <label for="planCrisisRoom" class="text-uppercase">Insérez le plan de la salle: </label>
        <input type="file" name="planCrisisRoom" id="planCrisisRoom" class="form-control-file mb-3" placeholder="Inserer le plan de la salle" accept="image/* ,application/pdf" value="{{ crisis.plan }}">
    </div>
</div>
    <div class="form-group">
        <label for="organization" class="text-uppercase">A quel organisme cette salle de crise est-elle rattachée:</label>
        <select class="form-control mb-4" name="organization" id="organization" aria-label=".form-select" required>
            <option value="0" selected>Quel organisme :</option>
                <option value="1" {% if crisis.organization.id == 1 %} selected {% endif %}>CPAM National</option>
                <option value="2" {% if crisis.organization.id == 2 %} selected {% endif %}>CPAM Haute-Garonne</option>
        </select>
    </div>

    <div class="text-center">
        <button class="btn btn-lg btn-info" type="submit">Modifier</button>
    </div>

</form>
</div>

{% endblock %}