{% extends 'admin/admin.html.twig' %}

{% block page_title %}Modifiez un organisme{% endblock %}
{% block page_subtitle %}En tant que SNPCA, vous pouvez modifiez un organisme{% endblock %}

{% block page_content %}
<h1 class="text-center" style="color:#00a2a6;">Formulaire de modification de l'organisme: {{ organization.name }}</h1>

<div class="row form-group" style="display:flex; justify-content:center;">
    <img src="\asset\images\logo\batiment2.png" class="img-circle col-xs-12 col-md-6" alt="" style="max-width: 200px;">
</div>


<div style="display: flex; justify-content:center;">
<form method="POST" class="col-md-6">

    <div class="col-6 form-group">
        <label for="name" class="text-uppercase">Nom de l'organisme : </label>
        <input type="text" name="name" id="name" class="form-control mb-3" placeholder="{{ organization.name }}" value="{{ organization.name }}" required>
    </div>

    <div class="col-6 form-group">
        <label for="coded" class="text-uppercase">Code de l'organisme : </label>
        <input type="number" name="coded" id="coded" class="form-control mb-3" placeholder="{{ organization.coded }}" value="{{ organization.coded }}" required>
    </div>

    <div class="text-center">
        <button class="btn btn-lg btn-info" type="submit">Modifiez</button>
    </div>

</form>
</div>

{% endblock %}