{% extends 'admin/admin.html.twig' %}

{% block page_title %}Profil Admin{% endblock %}
{% block page_subtitle %}Vous pouvez consulter ou modifier votre profil{% endblock %}

{% block page_content %}
    {% import "@AdminLTE/Macros/default.html.twig" as macro %}
<section class="container my-5">

    <div class="mb-3 text-center">
        <h1>Votre profil</h1>

    </div>
    <div class="w-50 mx-auto">
      {% for level, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ level }}">
                    {{ message|raw }}
                </div>
            {% endfor %}
        {% endfor %}
    <form method="post" enctype="multipart/form-data">
          <div class="form-horizontal mb-3">
          {# Start Row #}
            <label for="photo" style="margin-left: 35px;">Photo de profil</label>

        <div class="row form-group" >
        {% if login.photo is empty %}
            <img src="\asset\images\Photos\Pasdephoto.jpeg" class="img-circle col-xs-12 col-md-6" alt="" style="max-width: 200px;">
        {% else %}
            <img src="{{ login.photo }}" class="img-circle col-xs-12 col-md-6" alt="" style="max-width: 200px;">
        {% endif %}
            <div class="col-xs-12 col-md-6 col-md-offset-1" style="margin-top: 60px;">
                <label for="photo" class="form-label col-12 text-center text-uppercase">Ajoutez ou modifiez votre photo ? <span class="optionnel fst-italic">(Optionnel)</span></label>
                <input type="file" name="photo" id="photo" class="form-control-file file-upload radius-0 text-center col-12" accept="image/* ,application/pdf" value ="{{ login.photo }}"/>
            </div>
        </div>

                <div class="col-6 form-group">
                    <label for="firstname" class="text-uppercase">Prénom : </label>
                    <input type="text" name="firstname" id="firstname" class="form-control mb-3" placeholder="Votre prénom" value="{{ login.firstname }}"required>
                </div>
                <div class="col-6 form-group">
                    <label for="lastname" class="text-uppercase">Nom : </label>
                    <input type="text" name="lastname" id="lastname" class="form-control mb-3" placeholder="Votre nom" value="{{ login.lastname }}" required>
                </div>
          {# End Row #}
          <div class="col-6 form-group">
            <label for="exampleInputEmail1" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Votre email" value="{{ login.email }}" readOnly="readOnly">
          </div>
            
        {# Start Row #}
        <div class="form-group">
            <label for="organization" class="text-uppercase">Votre Organisme : </label>
            <select class="form-control mb-4" name="organization" id="organization" aria-label=".form-select" required>
                <option value="0">Choisissez votre Organisme:</option>
                    <option value="1" {% if login.organization.id == 1 %} selected {% endif %}>CPAM National</option>
                    <option value="2" {% if login.organization.id == 2 %} selected {% endif %}>CPAM Haute-Garonne</option>
            </select>
        </div>
        </div>
        {# End Row #}

        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-primary">Modifier</button>
          </div>
        </form>
      </div>
</section>
{% endblock %}